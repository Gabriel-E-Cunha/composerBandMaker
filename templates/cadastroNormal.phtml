<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="../vendor/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="../vendor/fontawesome/css/all.min.css">
    <title>Novo Perfil</title>
</head>

<body>

    <!-- Menu -->
    <header id="beggining">
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark p-0">
            <div class="mx-auto order-0">
                <a class="navbar-brand mx-auto" href="../index.html">BandMaker</a>
            </div>
        </nav>
    </header>

    <div class="container pt-5">
        <div class="row justify-content-center">
            <h2>Crie seu Perfil</h2>
        </div>

        <form method="POST">
            <div class="row mt-5">
                <!-- Usuário -->
                <div class="col-sm-2 col-md-4">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1">@</span>
                        </div>
                        <input type="text" class="form-control" placeholder="Username" aria-label="Username"
                            aria-describedby="basic-addon1">
                    </div>
                </div>
                <!-- Senha -->
                <div class="col-sm-12 col-md-4">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend ">
                            <label class="input-group-text">Senha</label>
                        </div>
                        <input type="password" class="form-control" placeholder="*****"
                            aria-label="Recipient's username" aria-describedby="basic-addon2">
                    </div>
                </div>
                <!-- Confirmação -->
                <div class="col-sm-12 col-md-4">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <label class="input-group-text">Confirme</label>
                        </div>
                        <input type="password" class="form-control" placeholder="*****"
                            aria-label="Recipient's username" aria-describedby="basic-addon2">
                    </div>
                </div>
                <div class="col-sm-12 col-md-6">
                    <!-- Nome Completo -->
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <label class="input-group-text">Nome Completo</label>
                        </div>
                        <input type="text" aria-label="First name" class="form-control" placeholder="Nome">
                        <input type="text" aria-label="Last name" class="form-control" placeholder="Sobrenome">
                    </div>
                </div>
                <!-- Email -->
                <div class="col-sm-12 col-md-6">
                    <div class="input-group ">
                        <div class="input-group-prepend">
                            <label class="input-group-text">Email</label>
                        </div>
                        <input type="text" class="form-control" placeholder="anon@example.com"
                            aria-label="Recipient's username" aria-describedby="basic-addon2">
                    </div>
                </div>

                <!-- Telefone -->
                <div class="col-sm-12 col-md-6 ">
                    <div class="input-group mt-3">
                        <div class="input-group-prepend">
                            <label class="input-group-text">Telefone</label>
                        </div>
                        <input type="text" class="form-control col-2 text-center" placeholder="DD"
                            aria-label="Recipient's username" aria-describedby="basic-addon2">

                        <input type="text" class="form-control col-3 text-center" placeholder="0000"
                            aria-label="Recipient's username" aria-describedby="basic-addon2">
                        <div class="input-group-append">

                        </div>
                        <input type="text" class="form-control col-3 text-center" placeholder="0000"
                            aria-label="Recipient's username" aria-describedby="basic-addon2">
                    </div>
                </div>

                <!--Instrumento -->
                <div class="col-sm-12 col-md-3 mt-3 mx-auto">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <label class="input-group-text" for="inputGroupSelect01">Instrumento</label>
                        </div>
                        <select class="custom-select" id="instrumento">
                            <option selected>---</option>
                            <option value="1">Guitarra</option>
                            <option value="2">Baixo</option>
                            <option value="3">Tambor</option>
                        </select>
                    </div>
                </div>
                <!-- Experiência -->
                <div class="col-sm-12 col-md-3 my-3 mx-auto">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">Experiência</span>
                        </div>
                        <input type="text" aria-label="First name" class="form-control">
                    </div>
                </div>
                <!-- Descrição -->
                <div class="col-sm-12 col-md-6 mr-auto mb-3">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">Descrição</span>
                        </div>
                        <textarea class="form-control" aria-label="With textarea"></textarea>
                    </div>
                </div>

                <!-- Upload -->
                <div class="col-md-6">
                    <div class="input-group-prepend mb-3">
                        <label class="input-group-text">Foto de Perfil</label>
                    </div>
                    <input type="file" id="imgload">
                    <img class="img-fluid mx-auto w-25" src="#" id="imgshow" align="left">
                </div>
                <!-- Criar -->
                <div class="col-sm-12 col-md-4 ml-auto my-4">
                    <button type="submit" class="btn btn-dark btn-lg w-100">Criar</button>
                </div>
        </form>
    </div>


    <!-- Footer -->
    <footer class="mt-5">
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark p-0 fixed-bottom">
            <div class="mx-auto order-0">
                <a class="navbar-text mx-auto" href="#">&copy;Copyright</a>
            </div>
        </nav>
    </footer>

</body>
<script src="../js/jquery-3.3.1.js"></script>
<script src="../js/app.js"></script>
<script src="../vendor/bootstrap/js/bootstrap.min.js"></script>

</html>